<div class= "container">
  <%= form_tag do %>
  <div class="form-group validate col s6">
    <%= label_tag :email %>
    <%= email_field_tag :email, "", class: "form-control" %>
  </div>

  <div class="form-group validate">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn waves-light" %> or <%= link_to "Sign Up ", sign_up_path %>
  </div>
<% end %>

</div>
